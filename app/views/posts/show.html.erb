<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Hook:</strong>
  <%= @post.hook %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.rich_body %>
</p>

<p>
  <strong>Published at:</strong>
  <%= @post.published_at %>
</p>
<% if @post.picture.attached? %>
<p>
  <strong>Picture:</strong>
  <%= image_tag @post.picture.variant(resize_to_limit: [100, 100]) %>
</p>
<% end %>

<p>
  <strong>Draft:</strong>
  <%= @post.draft %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
